{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(gh api:*)",
      "Bash(powershell -Command \"gh api repos/ZeuPark/DKT/pages -X POST -F ''build_type=legacy'' -F ''source[branch]=main'' -F ''source[path]=/'' 2>&1\")"
    ]
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "git add -A && git commit -m \"Auto-commit: $(date '+%Y-%m-%d %H:%M:%S')\" && git push origin main || true"
          }
        ]
      }
    ]
  }
}
